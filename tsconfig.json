{
    "compilerOptions": {
      "baseUrl": ".",
      "inlineSourceMap": true,
      "inlineSources": true,
      "module": "ESNext",
      "target": "ES6",
      "allowJs": true,
      "jsx": "react",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "isolatedModules": true,
      "strictNullChecks": true,
      "allowSyntheticDefaultImports": true,
      "lib": [
        "DOM",
        "ES5",
        "ES6",
        "ES7",
        "ES2021"
      ],
      "paths": {
        "@hooks/*": ["./src/hooks/*"],
        "@components/*": ["./src/components/*"],
        "@obsidian/*": ["./src/obsidian/*"],
        "@parsing": ["./src/parsing/index.ts"],
        "@processing/*": ["./src/processing/*"],
        "@random/*": ["./src/random/*"],
        "@storybook/*": ["./src/storybook/*"],
        "@global-types/*": ["./src/types/*"],
        "@utils/*": ["./src/utils/*"],
      }
    },
    "include": [
      "./src/**/*.ts"
  , "src/modal.ts"  ],
  "exclude": ["jest.config.js"]
  }